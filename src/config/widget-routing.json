  "specificActions": {
    "fetchSystemUptime": {
      "description": "Fetch system uptime metric only",
      "keywords": ["uptime"],
      "patterns": ["system uptime", "how long running", "server uptime"],
      "widgetId": "system-uptime",
      "widgetType": "metric_card"
    },
    "fetchRunningContainers": {
      "description": "Fetch running container count only",
      "keywords": ["running", "count"],
      "patterns": ["how many containers", "container count", "number of containers"],
      "widgetId": "running-containers",
      "widgetType": "metric_card"
    },
    "fetchContainerMetrics": {
      "description": "Fetch CPU for specific container",
      "keywords": ["cpu", "container"],
      "patterns": ["[container] cpu", "cpu usage for [container]"],
      "parameters": {
        "containerName": {
          "type": "string",
          "required": true,
          "examples": ["n8n", "redis", "postgres", "langflow"]
        }
      },
      "widgetIdPattern": "container-{name}-cpu",
      "widgetType": "metric_card"
    },
    "fetchContainerMemory": {
      "description": "Fetch memory for specific container",
      "keywords": ["memory", "container"],
      "patterns": ["[container] memory", "memory usage for [container]"],
      "parameters": {
        "containerName": {
          "type": "string",
          "required": true,
          "examples": ["n8n", "redis", "postgres", "langflow"]
        }
      },
      "widgetIdPattern": "container-{name}-memory",
      "widgetType": "metric_card"
    },
    "getQuickStatusSummary": {
      "description": "Get one-sentence infrastructure summary",
      "keywords": ["quick", "status", "summary"],
      "patterns": ["quick status", "everything okay", "overall status"],
      "returns": "text",
      "widgetType": "none"
    },
    "queryDatadogAgent": {
      "description": "Natural language query to LangFlow Datadog agent",
      "keywords": ["complex", "analysis"],
      "patterns": ["analyze", "recommend", "investigate"],
      "fallback": true,
      "widgetType": "dynamic"
    }
  },
  "widgetTypeDefinitions": {
    "metric_card": {
      "description": "Single metric display with value, status, trends, and insights",
      "properties": ["title", "value", "unit", "status", "change", "interpretation"],
      "sizes": ["compact", "default", "large", "xl"],
      "statuses": ["healthy", "warning", "critical", "unknown"]
    },
    "card_group": {
      "description": "Group of related metrics in 2-column layout",
      "properties": ["title", "subtitle", "metrics", "status", "insight"],
      "layout": "2-column grid"
    },
    "data_table": {
      "description": "Tabular data with columns and rows",
      "properties": ["title", "columns", "rows", "sortBy", "sortDirection"],
      "features": ["sorting", "formatting", "status columns"]
    },
    "ecr_summary": {
      "description": "AWS ECR repository overview",
      "properties": ["repositoryCount", "repositories", "observations", "suggestion"],
      "layout": "full-width"
    },
    "claude_usage": {
      "description": "Claude Code and API credits usage",
      "properties": ["claudeCode", "apiCredits", "showApiSection"],
      "features": ["session tracking", "weekly limits", "model breakdown"]
    },
    "anthropic_usage": {
      "description": "Anthropic API token usage from Admin API",
      "properties": ["tokenUsage"],
      "features": ["daily/monthly totals", "model breakdown"]
    },
    "status_indicator": {
      "description": "Simple status display with icon and message",
      "properties": ["title", "status", "message"],
      "statuses": ["healthy", "warning", "critical", "unknown"]
    },
    "progress_bar": {
      "description": "Progress or utilization visualization",
      "properties": ["title", "value", "max", "label", "status"],
      "features": ["scale markers", "status colors"]
    },
    "alert_list": {
      "description": "List of active alerts/incidents",
      "properties": ["title", "alerts"],
      "features": ["severity sorting", "timestamps"]
    }
  },
